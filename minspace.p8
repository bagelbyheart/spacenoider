 end
end
 self.y+=self.yd
-- if the entity goes a ways
-- past the bottom of the
-- screen it gets deleted.
 if self.y > 150 then
  del(entities,self)
 end
end

function _bounceround(self)
 if self.xd==0 and
    self.yd==0 then
  self.xd=drnd()
  self.yd=drnd()
 end
 if self.f>=150 then
  del(entities,self)
 end
 local ly=16 uy=100
 if self.y > uy or
    self.y < ly then
  self.yd=-self.yd
 end
 local lx=16 ux=112
 if self.x > ux or
    self.x < lx then
  self.xd=-self.xd
 end
 self.x=mid(self.x,lx,ux)
 self.y=mid(self.y,ly,uy)
 self.x+=self.xd
 self.y+=self.yd
end

function _sideside(self)
 self.xd=self.spd
 if flr(self.f/30%2)==0 then
  self.xd=-self.xd
 end
 self.x+=self.xd
end

function _circles(self)
 local r=6
 local rspd=30/(self.spd/2)
 local ags=(360/rspd)/360
 local cf=f%rspd
 local lf=(f-1)%rspd
 ox=r*sin(ags*lf)
 oy=r*cos(ags*lf)
 nx=r*sin(ags*cf)
 ny=r*cos(ags*cf)
 xd=nx-ox
 yd=ny-oy
 self.x+=xd
 self.y+=yd 
end

function _heatseek(self)
 local enemies={}
 for e in all(entities) do
  if e.l==1 or e.l==4 then
   if e.faction!=self.faction then
    add(enemies,e)
   end
  end
 end
 local t=_nearest(self,
                  enemies)
 _hseek(self,t)
end

function playmov(self)
 local ly=10 uy=97
 if self.y > uy then
  self.y=uy end
 if self.y < ly then
  self.y=ly end
 local lx=0 ux=120
 if self.x > ux then
  self.x=ux end
 if self.x < lx then
  self.x=lx end
 _mobj(self)
end

