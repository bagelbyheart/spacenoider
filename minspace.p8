function _ovrlp(a,b)
-- this checks for overlap
-- between two objects based on
-- obj.x,y and obj.w,h.
 return not (a.x>b.x+b.w or
             a.y>b.y+b.h or
             a.x+a.w<b.x or
             a.y+a.h<b.y)
end

