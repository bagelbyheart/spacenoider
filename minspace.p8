-- > spawn functions
function limitmake(ent)
 if ent.lim then
  local l=0;
  for e in all(entities) do
   if e.n==ent.n and
      e.faction==ent.faction then
    l+=1
   end
  end
  if l<ent.lim then
   return true
  else
   return false
  end
 else
  return true
 end
end

function _sline(n,en,x,y,side,more)
-- e = an entity function.
-- n = number of e to spawn.
 fullent=emake(en,x,y,{test=0})
 local xoff=fullent.w*1.5
 if side and side=="r" then
  xoff=-xoff
  x=128-x
 end
 for i=1,n do
  local ox=x+i*xoff
  local oy=y
  emake(en,ox,oy,more)
 end
end

function _dline(n,en,x,y,side,more)
 fullent=emake(en,x,y,{test=0})
 local xoff=fullent.w*1.5
 local yoff=-fullent.h*1.5
 if side then
  if side=="r" then
   xoff=-xoff
   x=128-x
  end
 end
 for i=1,n do
  local ox=x+i*xoff
  local oy=y+i*yoff
  emake(en,ox,oy,more)
 end
end

